def build(bld):
    source = """
    coll.c
    value.c
    xlist.c
    value_serialize.c
    schema.c
    """.split()

    bld(features = 'c cstlib',
        target = 'xmmstypes',
        source = source,
        includes = '. ../../.. ../../include ../../includepriv',
        install_path = None
        )


def configure(conf):
    return True


def options(opt):
    pass
